{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./www/app",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "~/*": ["www/*"],
    }
  },
  "include": [
    "./www/**/*"
  ]
}
