{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
