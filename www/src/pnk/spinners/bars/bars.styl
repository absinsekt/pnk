@import 'pnk/styles/theme'

.pnk-spinner-bars
  text-align: center
  margin: 0 auto

  &.x1
    width: unit($theme-wgt-size-step, 'rem')
    height: unit($theme-wgt-size-step / 4, 'rem')
    font-size: unit($theme-wgt-size-step / 4, 'rem')

  &.x2
    width: unit($theme-wgt-size-step * 1.5, 'rem')
    height: unit($theme-wgt-size-step / 2, 'rem')
    font-size: unit($theme-wgt-size-step / 2, 'rem')

  &.x3
    width: unit($theme-wgt-size-step * 3, 'rem')
    height: unit($theme-wgt-size-step, 'rem')
    font-size: unit($theme-wgt-size-step, 'rem')

  & > div
    height: 100%
    width: 15%
    display: inline-block

    -webkit-animation: stretchdelay 1.2s infinite ease-in-out
    animation: stretchdelay 1.2s infinite ease-in-out

  .card2
    -webkit-animation-delay: -1.1s
    animation-delay: -1.1s

  .card3
    -webkit-animation-delay: -1.0s
    animation-delay: -1.0s

  .card4
    -webkit-animation-delay: -0.9s
    animation-delay: -0.9s

  .card5
    -webkit-animation-delay: -0.8s
    animation-delay: -0.8s

@-webkit-keyframes stretchdelay
  0%, 40%, 100%
    -webkit-transform: scaleY(0.4)

  20%
    -webkit-transform: scaleY(1.0)

@keyframes stretchdelay
  0%, 40%, 100%
    transform: scaleY(0.4)

  20%
    transform: scaleY(1.0)
