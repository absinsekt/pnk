@import 'pnk/styles/widget'
@import 'pnk/styles/label'
@import 'pnk/styles/container'
@import 'pnk/styles/error'

@import 'pnk/lists/all'

pl-holder()
  font-weight: 400
  font-style: italic
  color: lighten($theme-wgt-text, 30)

.pnk-inline
  cursor: pointer
  padding: unit($theme-wgt-size-step / 4, 'rem')
  font-size: unit($theme-wgt-size-step / 2, 'rem')
  font-family: $fnt-sns
  font-weight: 600

  &::placeholder
    pl-holder()

  &::-ms-input-placeholder
    pl-holder()

  &::-webkit-input-placeholder
    pl-holder()

  &::-moz-placeholder
    pl-holder()

  &:-ms-input-placeholder
    pl-holder()

  &:-moz-placeholder
    pl-holder()

  &.x2
    width: "calc(100% - %s)" % unit($theme-wgt-size-step, 'rem')
    height: unit($theme-wgt-size-step, 'rem')
    padding: unit($theme-wgt-size-step / 4, 'rem')
    font-size: unit($theme-wgt-size-step / 2, 'rem')

  &.x3
    width: "calc(100% - %s)" % unit($theme-wgt-size-step * 1.875, 'rem')
    height: unit($theme-wgt-size-step * 1.875, 'rem')
    padding: unit($theme-wgt-size-step / 2, 'rem')
    font-size: unit($theme-wgt-size-step / 2, 'rem')

.pnk-dd-button
  cursor: pointer
  font-size: unit($theme-wgt-size-step / 2, 'rem')

  &.x2
    width: unit($theme-wgt-size-step, 'rem')
    height: unit($theme-wgt-size-step, 'rem')

  &.x3
    width: unit($theme-wgt-size-step * 1.875, 'rem')
    height: unit($theme-wgt-size-step * 1.875, 'rem')

.pnk-dd-selected
  display: flex
  align-items: center
  justify-content: center

.pnk-list-item
  color: $theme-wgt-text
  font-family: $fnt-sns

  .pnk-li-current
    font-weight: 600

  &:hover
    .pnk-dd-selected
      color: $theme-wgt-background

  &.x2
    height: unit($theme-wgt-size-step, 'rem')
    padding: unit($theme-wgt-size-step / 4, 'rem')
    padding-right: unit($theme-wgt-size-step / 6, 'rem')

  &.x3
    height: unit($theme-wgt-size-step * 1.875, 'rem')
    padding: unit($theme-wgt-size-step / 1.875, 'rem')
    padding-right: unit($theme-wgt-size-step / 2.25, 'rem')
