for i in 0..20
  .ma-{i}
    margin: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin: unit(i * $05, 'rem') !important

  .mv-{i}
    margin-top: unit(i * $1, 'rem') !important
    margin-bottom: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-top: unit(i * $05, 'rem') !important
      margin-bottom: unit(i * $05, 'rem') !important

  .mh-{i}
    margin-left: unit(i * $1, 'rem') !important
    margin-right: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-left: unit(i * $05, 'rem') !important
      margin-right: unit(i * $05, 'rem') !important

  .pa-{i}
    padding: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      padding: unit(i * $05, 'rem') !important

  .pv-{i}
    padding-top: unit(i * $1, 'rem') !important
    padding-bottom: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      padding-top: unit(i * $05, 'rem') !important
      padding-bottom: unit(i * $05, 'rem') !important

  .ph-{i}
    padding-left: unit(i * $1, 'rem') !important
    padding-right: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      padding-left: unit(i * $05, 'rem') !important
      padding-right: unit(i * $05, 'rem') !important

  .pt-{i}
    padding-top: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      padding-top: unit(i * $05, 'rem') !important

  .pb-{i}
    padding-bottom: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      padding-bottom: unit(i * $05, 'rem') !important

  .mt-{i}
    margin-top: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-top: unit(i * $05, 'rem') !important

  .mb-{i}
    margin-bottom: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-bottom: unit(i * $05, 'rem') !important

  .mr-{i}
    margin-right: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-right: unit(i * $05, 'rem') !important

  .ml-{i}
    margin-left: unit(i * $1, 'rem') !important

    @media(max-width: $bp[sm])
      margin-left: unit(i * $05, 'rem') !important

  .w-{i * 10}
    width: unit(i * 10, '%') !important

  .h-{i * 10}
    height: unit(i * 10, '%') !important

// ta-<l|c|r> text align <left|center|right>
// ta-<l|c|r>-<xxs|xs|sm|md|lg|xl> text align <left|center|right> beginning from given breakpoint
for $tak, $tav in $ta
  .ta-{$tak}
    text-align: $tav

  for $k, $v in $bp
    .ta-{$k}-{$tak}
      @media(min-width: $v)
        text-align: $tav

for $k, $v in $bp
  .{$k}-visible
    display: none

    @media(max-width: $v)
      display: unset

  .{$k}-hidden
    @media(max-width: $v)
      display: none !important

.fx-c
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  align-items: center
  justify-content: center
