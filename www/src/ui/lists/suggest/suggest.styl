@import 'ui/styles/widget'
@import 'ui/styles/label'
@import 'ui/styles/container'
@import 'ui/styles/error'

@import 'ui/lists/all'

pl-holder()
  font-weight: 400
  font-style: italic
  color: lighten($theme-wgt-text, 30)

.pnk-input
  width: 100%
  font-family: $fnt-sns
  font-weight: 600

  &::placeholder
    pl-holder()

  &::-ms-input-placeholder
    pl-holder()

  &::-webkit-input-placeholder
    pl-holder()

  &::-moz-placeholder
    pl-holder()

  &:-ms-input-placeholder
    pl-holder()

  &:-moz-placeholder
    pl-holder()

  &.x2
    height: unit($theme-wgt-size-step, 'rem')
    padding: unit($theme-wgt-size-step / 4, 'rem')
    font-size: unit($theme-wgt-size-step / 2, 'rem')

  &.x3
    height: unit($theme-wgt-size-step * 1.875, 'rem')
    padding: unit($theme-wgt-size-step / 4, 'rem')
    font-size: unit($theme-wgt-size-step / 2, 'rem')

.pnk-list-item
  a
    font-family: $fnt-sns
    direction: rtl
